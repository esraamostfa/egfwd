<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.onboarding.InstructionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/basic_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="297dp"

            android:layout_marginBottom="@dimen/margin_large"
            android:src="@drawable/shoes"
            app:srcCompat="@drawable/shoes" />

        <TextView
            android:id="@+id/instructions1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header3_font_size"
            android:text="@string/instructions1"
            />

        <TextView
            android:id="@+id/instructions2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header3_font_size"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="@string/instructions2"
            />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:layout_gravity="end"/>

    </LinearLayout>


</layout>